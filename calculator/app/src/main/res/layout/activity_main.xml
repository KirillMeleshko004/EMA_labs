<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutMain"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="@color/bg_clr"
    android:gravity="center"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/inputOperations"
        android:layout_width="380dp"
        android:layout_height="80dp"
        android:background="@color/big_btn_clr"
        android:gravity="end"
        android:paddingStart="10sp"

        android:paddingTop="5sp"
        android:paddingEnd="10sp"
        android:scrollbars="vertical"
        android:text=""
        android:textColor="@color/btn_clr"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/inputSolution"
        android:layout_width="380dp"
        android:layout_height="120dp"
        android:layout_below="@+id/inputOperations"
        android:paddingTop="5sp"
        android:paddingEnd="10sp"
        android:paddingStart="10sp"
        android:scrollbars="vertical"

        android:text=""
        android:gravity="end"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/btn_clr"
        android:background="@color/zone_clr"/>

    <Button
        android:id="@+id/btnClear"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputSolution"
        android:layout_marginTop="-1dp"
        android:backgroundTint="@color/big_btn_clr"

        android:gravity="center"
        android:tag="@string/clearBtnTag"
        android:text="@string/clear"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnBr"
        android:tag="@string/bracketsBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/inputSolution"
        android:layout_toEndOf="@+id/btnClear"

        android:text="@string/brackets"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/big_btn_clr"/>

    <Button
        android:id="@+id/btnPow"
        android:tag="@string/opBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/inputSolution"
        android:layout_toEndOf="@+id/btnBr"

        android:text="@string/pow"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/big_btn_clr"/>

    <Button
        android:id="@+id/btnBackspace"
        android:tag="@string/backspaceBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/inputSolution"
        android:layout_toEndOf="@+id/btnPow"
        android:text="@string/backspace"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:backgroundTint="@color/big_btn_clr"/>

    <Button
        android:id="@+id/btnOne"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnClear"
        android:text="@string/one"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnTwo"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnClear"
        android:layout_toEndOf="@+id/btnOne"
        android:text="@string/two"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnThree"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnClear"
        android:layout_toEndOf="@+id/btnTwo"
        android:text="@string/three"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnDivide"
        android:tag="@string/opBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnClear"
        android:layout_toEndOf="@+id/btnThree"
        android:text="@string/division"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/btn_clr"
        android:backgroundTint="@color/op_btn_clr"/>


    <Button
        android:id="@+id/btnFour"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnOne"
        android:text="@string/four"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnFive"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnTwo"
        android:layout_toEndOf="@+id/btnFour"
        android:text="@string/five"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnSix"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnThree"
        android:layout_toEndOf="@+id/btnFive"
        android:text="@string/six"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnMultiply"
        android:tag="@string/opBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnDivide"
        android:layout_toEndOf="@+id/btnSix"
        android:text="@string/multiplication"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/btn_clr"
        android:backgroundTint="@color/op_btn_clr"/>


    <Button
        android:id="@+id/btnSeven"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnFour"
        android:text="@string/seven"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnEight"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnFive"
        android:layout_toEndOf="@+id/btnSeven"
        android:text="@string/eight"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnNine"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnSix"
        android:layout_toEndOf="@+id/btnEight"
        android:text="@string/nine"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnSubtract"
        android:tag="@string/opBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnMultiply"
        android:layout_toEndOf="@+id/btnNine"
        android:text="@string/minus"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/btn_clr"
        android:backgroundTint="@color/op_btn_clr"/>


    <Button
        android:id="@+id/btnPoint"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnSeven"
        android:text="@string/point"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnZero"
        android:tag="@string/digitBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnEight"
        android:layout_toEndOf="@+id/btnPoint"
        android:text="@string/zero"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/op_btn_clr"
        android:backgroundTint="@color/btn_clr"/>

    <Button
        android:id="@+id/btnAdd"
        android:tag="@string/opBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnNine"
        android:layout_toEndOf="@+id/btnZero"
        android:text="@string/plus"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="@color/btn_clr"
        android:backgroundTint="@color/op_btn_clr"/>


    <Button
        android:id="@+id/btnEquals"
        android:tag="@string/equalBtnTag"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/btnSubtract"
        android:layout_toEndOf="@+id/btnAdd"
        android:text="@string/equality"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#151515"
        android:backgroundTint="@color/op_btn_clr"/>


    <nl.dionsegijn.konfetti.KonfettiView
        android:id="@+id/confettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
